<odoo>


    <record model="ir.actions.act_window" id="comprador_list_action">
        <field name="name">Comprador</field>
        <field name="res_model">salespop.comprador</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="estudiante_list_action">
        <field name="name">Estudiante</field>
        <field name="res_model">salespop.estudiante</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="portatil_list_action">
        <field name="name">Portatil</field>
        <field name="res_model">salespop.portatil</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <record model="ir.actions.act_window" id="oferta_list_action">
        <field name="name">Ofertas</field>
        <field name="res_model">salespop.oferta</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="hdd_list_action">
        <field name="name">HDD</field>
        <field name="res_model">salespop.hdd</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="ram_list_action">
        <field name="name">Ram</field>
        <field name="res_model">salespop.ram</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="Salespop" id="salespop_menu_root" />

    <menuitem name="Comprador" id="salespop_menu_comprador" parent="salespop_menu_root" />
    <menuitem name="Estudiante" id="salespop_menu_estudiante" parent="salespop_menu_root" />
    <menuitem name="Portatil" id="salespop_menu_portatil" parent="salespop_menu_root" />
    <menuitem name="Ofertas" id="salespop_menu_oferta" parent="salespop_menu_root" />
    <menuitem name="HDD" id="salespop_menu_hdd" parent="salespop_menu_root" />
    <menuitem name="Ram" id="salespop_menu_ram" parent="salespop_menu_root" />

    <menuitem name="Listado de compradores" id="salespop_list_comprador" parent="salespop_menu_comprador" action="comprador_list_action" />
    <menuitem name="Listado de estudiantes" id="salespop_list_estudiante" parent="salespop_menu_estudiante" action="estudiante_list_action" />
    <menuitem name="Listado de discos duros" id="salespop_list_hdd" parent="salespop_menu_hdd" action="hdd_list_action" />
    <menuitem name="Listado de ofertas" id="salespop_list_oferta" parent="salespop_menu_oferta" action="oferta_list_action" />
    <menuitem name="Listado de portatiles" id="salespop_list_portatil" parent="salespop_menu_portatil" action="portatil_list_action" />
    <menuitem name="Listado de ram" id="salespop_list_ram" parent="salespop_menu_ram" action="ram_list_action" />

    <record id="comprador_view_form" model="ir.ui.view">
        <field name="name">salespop.comprador.view.form</field>
        <field name="model">salespop.comprador</field>
        <field name="arch" type="xml">
            <form string="Comprador">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="direction" />
                        <field name="telefono" />
                        <field name="portatiles_id" />
                        <field name="ofertas_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="comprador_view_tree" model="ir.ui.view">
        <field name="name">salespop.comprador.view.tree</field>
        <field name="model">salespop.comprador</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="direction" />
                <field name="telefono" />
                <field name="portatiles_id" />
                <field name="ofertas_id" />
            </tree>
        </field>
    </record>

    <record id="salespop_estudiante_view_form" model="ir.ui.view">
        <field name="name">salespop.estudiante.view.form</field>
        <field name="model">salespop.estudiante</field>
        <field name="arch" type="xml">
            <form string="Estudiante">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="direction" />
                        <field name="telefono" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="salespop_estudiante_view_tree" model="ir.ui.view">
        <field name="name">salespop.estudiante.view.tree</field>
        <field name="model">salespop.estudiante</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="direction" />
                <field name="telefono" />
            </tree>
        </field>
    </record>

    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">salespop.hdd.view.form</field>
        <field name="model">salespop.hdd</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="capacidad" />
                        <field name="tipo" />
                        <field name="portatil_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="model_name_view_tree" model="ir.ui.view">
        <field name="name">salespop.hdd.view.tree</field>
        <field name="model">salespop.hdd</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="capacidad" />
                <field name="tipo" />
                <field name="portatil_id" />
            </tree>
        </field>
    </record>

    <record id="oferta_view_form" model="ir.ui.view">
        <field name="name">salespop.oferta.view.form</field>
        <field name="model">salespop.oferta</field>
        <field name="arch" type="xml">
            <form string="Oferta">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="portatil_id" />
                        <field name="aceptada" />
                        <field name="comprador_id" />
                        <field name="observaciones" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="oferta_view_tree" model="ir.ui.view">
        <field name="name">salespop.oferta.view.tree</field>
        <field name="model">salespop.oferta</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="portatil_id" />
                <field name="aceptada" />
                <field name="comprador_id" />
                <field name="observaciones" />
            </tree>
        </field>
    </record>

    <record id="portatil_view_form" model="ir.ui.view">
        <field name="name">Portatil</field>
        <field name="model">salespop.portatil</field>
        <field name="arch" type="xml">
            <form string="Portatil">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="marca" />
                        <field name="cpu" />
                        <field name="ram_id" />
                        <field name="hdd_id" />
                        <field name="fecha_compra" />
                        <field name="usage" />
                        <field name="precio" />
                        <field name="observaciones" />
                        <field name="total_ram" />
                        <field name="total_hdd" />
                        <field name="ofertas_id" />
                        <field name="comprador_id" />
                        <field name="vendido" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="portatil_view_tree" model="ir.ui.view">
        <field name="name">Portatiles</field>
        <field name="model">salespop.portatil</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="marca" />
                <field name="cpu" />
                <field name="ram_id" />
                <field name="hdd_id" />
                <field name="fecha_compra" />
                <field name="usage" />
                <field name="precio" />
                <field name="observaciones" />
                <field name="total_ram" />
                <field name="total_hdd" />
                <field name="ofertas_id" />
                <field name="comprador_id" />
                <field name="vendido" />
            </tree>
        </field>
    </record>

    <record id="model_name_view_calendar" model="ir.ui.view">
        <field name="name">Calendario Portatiles</field>
        <field name="model">salespop.portatil</field>
        <field name="arch" type="xml">
            <calendar string="Calendar Description" date_start="fecha_compra">
                <field name="fecha_compra" />
            </calendar>
        </field>
    </record>

    <record id="model_name_view_search" model="ir.ui.view">
        <field name="name">salespop.portatil.view.search</field>
        <field name="model">salespop.portatil</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name" />
                <field name="marca" />
                <field name="total_ram" />
                <field name="total_hdd" />
                <field name="cpu" />
                <group string="Group By">
                    <filter name="group_by_vendido" string="Vendido" context="{'group_by': 'vendido'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="ram_view_form" model="ir.ui.view">
        <field name="name">salespop.ram.view.form</field>
        <field name="model">salespop.ram</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="frecuencia" />
                        <field name="latencia" />
                        <field name="cantidad" />
                        <field name="tipo" />
                        <field name="portatil_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ram_view_tree" model="ir.ui.view">
        <field name="name">salespop.ram.view.tree</field>
        <field name="model">salespop.ram</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="frecuencia" />
                <field name="latencia" />
                <field name="cantidad" />
                <field name="tipo" />
                <field name="portatil_id" />
            </tree>
        </field>
    </record>
</odoo>